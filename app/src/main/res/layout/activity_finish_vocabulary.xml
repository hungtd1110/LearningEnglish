<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.admin.learningenglish.vocabulary.activities.FinishVocabularyActivity">

    <TextView
        android:textColor="@color/vocaularyTrue"
        android:textSize="20sp"
        android:text="Mức độ thuộc từ : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtPercent"
        android:textColor="@color/vocaularyTrue"
        android:textSize="22sp"
        android:layout_alignParentRight="true"
        android:text="90%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtTitleList"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_below="@+id/txtPercent"
        android:text="Danh sách từ luyện tập"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/lvQuestion"
        android:layout_marginTop="10dp"
        android:divider="@null"
        android:scrollbars="none"
        android:layout_below="@+id/txtTitleList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</RelativeLayout>
